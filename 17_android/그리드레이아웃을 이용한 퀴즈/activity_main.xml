<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tableLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="5"
    android:orientation="horizontal">

    <EditText
        android:id="@+id/edit1"
        android:layout_columnSpan="5"
        android:layout_gravity="fill_horizontal"
        android:hint="숫자1 입력" />

    <EditText
        android:id="@+id/edit2"
        android:layout_columnSpan="5"
        android:layout_gravity="fill_horizontal"
        android:hint="숫자2 입력" />

    <Button
        android:layout_columnWeight="1"
        android:layout_width="0dp"
        android:id="@+id/num0"
        android:layout_column="0"
        android:layout_row="2"
        android:text="0" />

    <Button
        android:layout_columnWeight="1"
        android:layout_width="0dp"
        android:id="@+id/num1"
        android:text="1" />

    <Button
        android:layout_columnWeight="1"
        android:layout_width="0dp"
        android:id="@+id/num2"
        android:text="2" />

    <Button
        android:layout_columnWeight="1"
        android:layout_width="0dp"
        android:id="@+id/num3"
        android:text="3" />

    <Button
        android:layout_columnWeight="1"
        android:layout_width="0dp"
        android:id="@+id/num4"
        android:text="4" />

    <Button
        android:layout_columnWeight="1"
        android:layout_width="0dp"
        android:id="@+id/num5"
        android:text="5" />

    <Button
        android:layout_columnWeight="1"
        android:layout_width="0dp"
        android:id="@+id/num6"
        android:text="6" />

    <Button
        android:layout_columnWeight="1"
        android:layout_width="0dp"
        android:id="@+id/num7"
        android:text="7" />

    <Button
        android:layout_columnWeight="1"
        android:layout_width="0dp"
        android:id="@+id/num8"
        android:text="8" />

    <Button
        android:layout_columnWeight="1"
        android:layout_width="0dp"
        android:id="@+id/num9"
        android:text="9" />

    <Button
        android:id="@+id/add"
        android:layout_columnSpan="5"
        android:layout_gravity="fill_horizontal"
        android:layout_marginTop="5dp"
        android:onClick="calculate"
        android:text="더하기" />

    <Button
        android:id="@+id/sub"
        android:layout_columnSpan="5"
        android:layout_gravity="fill_horizontal"
        android:layout_marginTop="5dp"
        android:onClick="calculate"
        android:text="빼기" />

    <Button
        android:id="@+id/mul"
        android:layout_columnSpan="5"
        android:layout_gravity="fill_horizontal"
        android:layout_marginTop="5dp"
        android:onClick="calculate"
        android:text="곱하기" />

    <Button
        android:id="@+id/div"
        android:layout_columnSpan="5"
        android:layout_gravity="fill_horizontal"
        android:layout_marginTop="5dp"
        android:onClick="calculate"
        android:text="나누기" />

    <TextView
        android:id="@+id/textResult"
        android:layout_columnSpan="5"
        android:layout_gravity="fill_horizontal"
        android:layout_marginTop="5dp"
        android:text="계산 결과 : "
        android:textColor="#FF0000"
        android:textSize="20dp" />

</GridLayout>